int notes = sizeof(melody) / sizeof(melody[0]) / 2; // sizeof gives the number of bytes, each int value is composed of two bytes (16 bits), there are two values per note (pitch and duration), so for each note there are four bytes
int wholenote = (60000 * 4) / tempo;  // this calculates the duration of a whole note in ms
int divider = 0, noteDuration = 0;

void TakeOnMe(int pin){
  for (int thisNote = 0; thisNote < notes * 2; thisNote = thisNote + 2) {
    divider = melody[thisNote + 1];
    if (divider > 0) {
      noteDuration = (wholenote) / divider;
    } else if (divider < 0) {
      noteDuration = (wholenote) / abs(divider);
      noteDuration *= 1.5;
    }
    tone(buzzer, melody[thisNote], noteDuration * 0.9);
    delay(noteDuration);
    noTone(buzzer);
  }
  AlarmFlag=false;
  }    
